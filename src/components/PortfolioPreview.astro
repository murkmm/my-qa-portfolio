---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'work'>;
}

const { data, id } = Astro.props.project;
---

<a class="card" href={`/work/${id}`}>
	<div class="title-container">
		<span class="title">{data.title}</span>
	</div>
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />

	<div class="summary-overlay">
		<div class="summary-content">
			{
				data.summary && (
					<ul>
						{data.summary.map((point) => <li>{point}</li>)}
					</ul>
				)
			}
		</div>
	</div>
</a>

<script>
	// This script runs for all project cards on the page
	document.addEventListener('DOMContentLoaded', () => {
		const cards = document.querySelectorAll<HTMLAnchorElement>('.card');

		cards.forEach(card => {
			card.addEventListener('click', function (event) {
				const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
				if (!isTouchDevice) {
					return;
				}
				if (this.classList.contains('is-active')) {
					return;
				}
				cards.forEach(c => {
					if (c !== this) {
						c.classList.remove('is-active');
					}
				});
				event.preventDefault();
				this.classList.add('is-active');
			});
		});

		document.addEventListener('click', function(event) {
			if (!(event.target as HTMLElement).closest('.card')) {
				cards.forEach(card => card.classList.remove('is-active'));
			}
		});
	});
</script>

<style>
	.card {
		position: relative;
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}
	
	.title-container {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 2; 
	}

	.title {
		display: inline-block;
		margin: 0.5rem;
		padding: 0.25rem 0.75rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
		font-size: var(--text-sm);
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center center;
		transition: transform 0.3s ease-in-out;
	}
	
	.card:hover img,
	.card.is-active img {
		transform: scale(1.1);
	}

	.summary-overlay {
		grid-area: 1 / 1 / 3 / 3;
		z-index: 1;
		background: rgba(9, 11, 17, 0.8);
		color: var(--accent-text-over);
		opacity: 0;
		transition: opacity 0.3s ease-in-out;
		display: grid;
		place-items: center;
		pointer-events: none;
	}
	
	.card:hover .summary-overlay,
	.card.is-active .summary-overlay {
		opacity: 1;
	}
	
	/* NEW: Added a background gradient to the title container */
	.title-container {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 2;
		/* This gradient makes the top of the card darker, so the title is always readable */
		background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), transparent);
		padding: 0.5rem;
	}

	/* CHANGED: Removed margin from the title itself */
	.title {
		display: inline-block;
		padding: 0.25rem 0.75rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
		font-size: var(--text-sm);
	}

	.summary-content {
		padding: 1rem;
		font-size: var(--text-sm);
	}
	
	.summary-content ul {
		list-style: disc;
		padding-left: 1.25rem;
	}
	
	.summary-content li {
		white-space: normal;
		overflow-wrap: break-word;
		margin-bottom: 0.5rem;
	}
	.summary-content li:last-child {
		margin-bottom: 0;
	}


	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}

		.title-container {
			padding: 0.75rem; /* Slightly more padding on desktop */
		}

		.title {
			border-radius: 0.9375rem;
			font-size: var(--text-lg);
			padding: 0.5rem 1rem;
		}

		.summary-content {
			font-size: var(--text-base);
		}
	}
</style>