---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'work'>;
}

const { data, id } = Astro.props.project;
---

<a class="card" href={`/work/${id}`}>
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />

	<div class="text-overlay">
		<h3 class="title">{data.title}</h3>
		{
			data.summary && (
				<ul class="summary">
					{data.summary.map((point) => (
						<li>{point}</li>
					))}
				</ul>
			)
		}
	</div>
</a>

<script>
	// This script runs for all project cards on the page
	document.addEventListener('DOMContentLoaded', () => {
		const cards = document.querySelectorAll<HTMLAnchorElement>('.card');

		cards.forEach((card) => {
			card.addEventListener('click', function (event) {
				const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
				if (!isTouchDevice) {
					return;
				}
				if (this.classList.contains('is-active')) {
					return;
				}
				cards.forEach((c) => {
					if (c !== this) {
						c.classList.remove('is-active');
					}
				});
				event.preventDefault();
				this.classList.add('is-active');
			});
		});

		document.addEventListener('click', function (event) {
			if (!(event.target as HTMLElement).closest('.card')) {
				cards.forEach((card) => card.classList.remove('is-active'));
			}
		});
	});
</script>

<style>
	.card {
		position: relative;
		display: block;
		min-height: 11rem; /* CHANGED: from height to min-height */
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		transition: box-shadow var(--theme-transition);
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	img {
		position: absolute; /* Position image behind the overlay */
		inset: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center center;
		transition: transform 0.4s ease-out;
		z-index: -1; /* Ensure it's behind the text overlay */
	}

	.text-overlay {
		position: absolute;
		inset: 0;
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		padding: 1rem;
		z-index: 1;
		background: linear-gradient(to top, rgba(9, 11, 17, 0.95) 10%, rgba(9, 11, 17, 0.7) 40%, transparent);
	}

	.title {
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		color: var(--accent-text-over);
		margin: 0;
		padding-bottom: 0.5rem;
	}

	.summary {
		list-style: none;
		padding: 0;
		margin: 0;
		font-size: var(--text-sm);
		color: var(--accent-text-over);
		opacity: 0;
		max-height: 0;
		transition: opacity 0.3s ease-out, max-height 0.3s ease-out, margin-top 0.3s ease-out;
		overflow: hidden;
	}

	.summary li {
		white-space: normal;
		overflow-wrap: break-word;
		padding-top: 0.5rem;
	}

	.card:hover img,
	.card.is-active img {
		transform: scale(1.1);
	}

	.card:hover .summary,
	.card.is-active .summary {
		opacity: 0.9;
		max-height: 10em;
		margin-top: 0.5rem;
	}

	@media (min-width: 50em) {
		.card {
			min-height: 22rem; /* CHANGED: from height to min-height */
			border-radius: 1.5rem;
		}

		.title {
			font-size: var(--text-xl);
		}
	}
</style>